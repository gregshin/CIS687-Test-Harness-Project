<Window x:Class="testHarnessGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testHarnessGui"
        mc:Ignorable="d"
        Title="MainWindow" Width="640" Height="850">

    <StackPanel Margin="10">
        <ListBox x:Name="fileBox" Height="350" Margin="0 10" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <Grid>
            <Button x:Name="BrowseButton" Content="Browse DLLs" HorizontalAlignment="Center"   
                Width="100" Click="BrowseButton_Click"   
                Height="30" Margin="0 0 250 0" />
            <Button x:Name="Submit" Content="Submit" Width="100" Height="30" VerticalAlignment="Bottom" Click="Submit_Click" HorizontalAlignment="Center"/>
            <Button x:Name="Clear" Content="Clear" Width="100" Height="30" VerticalAlignment="Bottom" Click="Clear_Click" HorizontalAlignment="Center" Margin="250 0 0 0"/>
        </Grid>
        <ListBox x:Name="resultsBox" Height="350" Margin="0 10" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" />
    </StackPanel>
</Window>