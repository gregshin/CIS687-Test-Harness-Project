<Window x:Class="testHarnessGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testHarnessGui"
        mc:Ignorable="d"
        Title="MainWindow" Width="640" Height="800">

    <StackPanel Margin="10">
        <Button x:Name="BrowseButton" Content="Browse DLLs" HorizontalAlignment="Center"   
                Width="100" Click="BrowseButton_Click"   
                Height="30"/>
        <ListBox Name="fileBox" Height="350" Margin="0 10"/>
        <Button x:Name="Submit" Content="Submit" Width="100" Height="30" VerticalAlignment="Bottom" Click="Submit_Click"/>
        <ListBox Name="resultsBox" Height="200" Margin="0 10"  />
    </StackPanel>
</Window>